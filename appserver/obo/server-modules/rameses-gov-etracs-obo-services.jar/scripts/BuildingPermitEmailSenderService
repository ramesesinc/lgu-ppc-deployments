import com.rameses.annotations.*;

class BuildingPermitEmailSenderService {
	
	@DataContext("vw_building_permit_doc")
	def bldgPermitDoc;

	@ProxyMethod
	public def sendEmail(def o) {
		def list = bldgPermitDoc.find( [appid: o.appid ] ).where("doctype.includeinemail = 1").list();
		return list.collect{ it.doctype.objid };
	}



}